<!-- Direct Digital Synthisizer Component specification 

This component synthesizes a complex waveform.  The starting phase and increment are specified by properties.
The required intput port into this component is a control stream.  The timestamp is ignored and is not required
to be passed to the output stream.  When this component recieves a Sync message it must reset its phase to the
strart phase, fluh any buffers that it can and send an "EOS" message prior to generating new data. 
 -->

<ComponentSpec Name="dds">
  <Properties>

<!-- DDS advance rate in radians per sample  Format: Qs0.31 
     This value is normalized to the unit circle.
-->
    <Property Name="advanceRate" type="ULong" Readable="true" Writable="true"/>

<!-- Initial phase of the DDS in Radians. Also used as the start phase after Sync  Format:Qs0.31 
     This value is normalized to the unit circle.
-->
    <Property Name="startPhase" type="ULong" Readable="true" Writable="true"/>

  </Properties>

  <DataInterfaceSpec Name="in" Producer="false">
    <Protocol>
      <xi:include href="cstream_control_protocol.xml"/>
    </Protocol>
  </DataInterfaceSpec>

  <DataInterfaceSpec Name="out" Producer="true">
    <Protocol>
      <xi:include href="cstream_data_protocol.xml"/>
    </Protocol>
  </DataInterfaceSpec>

</ComponentSpec>
