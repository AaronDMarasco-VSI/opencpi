
<!-- Complex mixer component spec
     This component produces the product of two complex data streams.  When this component
     receives a "Sync" message it must perform the following steps.
     
        * Flush all input buffers
        * Send Sync message to DDS
        * Throw out all data on DDS input until EOS is received.
-->

<ComponentSpec Name="ComplexMixer">

  <!-- input stream that contains both data and control --->
  <DataInterfaceSpec Name="in" Producer="false">
    <xi:include href="cstream_data_protocol.xml"/>
    <xi:include href="cstream_control_protocol.xml"/>
  </DataInterfaceSpec>

  <!-- output stream that contains both data and control --->
  <DataInterfaceSpec Name="out" Producer="true">
    <xi:include href="cstream_data_protocol.xml"/>
    <xi:include href="cstream_control_protocol.xml"/>
  </DataInterfaceSpec>

  <!-- Optional control only stream.  This port is used to tell the DDS to re-sync --->
  <DataInterfaceSpec Name="out_control_only" Producer="true" Optional="true">
    <xi:include href="cstream_control_protocol.xml"/>
  </DataInterfaceSpec>

</ComponentSpec>
