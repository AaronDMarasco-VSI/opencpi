#!/bin/sh

ME=`basename $0`
DIR=`dirname $0`
OS=$OCPI_TOOL_OS
if test "$OS" = ""; then
  OS=`uname -s|tr A-Z a-z`
fi
usage () {
  echo Usage is: `basename $0` \[ load \| unload \| reload \| status \]
  exit 1
}
if [ $# = 0 -o $# != 1 ] ; then
  usage
fi
SCR=ocpi_${OS}_driver
DVR=$DIR/$SCR
[ ! -r $DVR ] && DVR=$DIR/../scripts/$SCR
[ ! -r $DVR ] && DVR=$DIR/../../scripts/$SCR
if [ ! -r $DVR ] ; then
  echo There is no driver loading/unloading support for this system \(${OS}\).
  exit 1
fi
source $DIR/ocpibootstrap.sh $DIR/ocpibootstrap.sh

if [ $1 = load -o $1 = unload -o $1 = reload -o $1 = status ] ; then
  exec sh $DIR/ocpi_${OS}_driver $1
fi

usage



