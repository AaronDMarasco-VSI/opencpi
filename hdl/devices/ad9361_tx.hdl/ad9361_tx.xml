<HdlDevice language="vhdl" spec='rf_tx-spec' FirstRawProperty='spi_conf'>
  <ControlInterface Timeout="1024"/>
  <!-- Note this is not volatile since it is determined in the container -->
  <property name='other_present' type='bool' readable='1'/>
  <!-- This signal controls which of rx and tx will drive the ctrl_in wires -->
  <property name='enable_ctrl_in' type='bool' initial='1' readable='1'/>
  <xi:include href='ad9361-properties.xml'/>
  <!-- shared SPI to subdevice -->
  <rawprop name='rawprops' master='true'/>
  <devsignal signals='ad9361-subdevice-signals.xml' master='true'/>
  <!-- CTRL_OUT may be used by rx or tx -->
  <signal input='ctrl_out' width='8'/>
</HdlDevice>
